<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.atat.property.dao.PropertyMapDao">

    <insert id="addPropertyMap" parameterType="java.util.Map">
        INSERT INTO propertyMap
        <trim prefix="(" suffix=")" suffixOverrides=",">
            propkey,
                <if test="propval != null">
                    propval,
                </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            #{propertyMapKey}
                <if test="propval != null">
                    #{propval},
                </if>
        </trim>
    </insert>

    <update id="updatePropertyMapByKey" parameterType="java.util.Map">
        update propertyMap
        <trim prefix="set" suffixOverrides=",">
                <if test="propval != null">
                    propval =#{propval},
                </if>
        </trim>
        where propkey = #{propertyMapKey}
    </update>

    <select id="selectPropertyMapList" parameterType="java.util.Map"
            resultType="java.util.Map">
        select
            propval propval,
        propkey propertyMapKey
        from propertyMap
        WHERE
        1=1
        <if test="propertyMapKey != null">
            and propkey =#{propertyMapKey}
        </if>
            <if test="propval != null">
                and propval =#{propval}
            </if>
        ORDER BY propkey ASC
    </select>

    <delete id="delPropertyMapByKey" parameterType="java.lang.String">
        DELETE FROM  propertyMap
        where
        propkey = #{propertyMapKey}
    </delete>

</mapper>
