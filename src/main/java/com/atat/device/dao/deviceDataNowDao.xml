<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.atat.device.dao.DeviceDataNowDao">

    <insert id="addDeviceDataNow" parameterType="java.util.Map">
        INSERT INTO device_data_now
        <trim prefix="(" suffix=")" suffixOverrides=",">
            recordTime,
                <if test="deviceId != null">
                    deviceId,
                </if>
                <if test="value != null">
                    value,
                </if>
                <if test="categoryParameterId != null">
                    categoryParameterId,
                </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            #{recordTime},
                <if test="deviceId != null">
                    #{deviceId},
                </if>
                <if test="value != null">
                    #{value},
                </if>
                <if test="categoryParameterId != null">
                    #{categoryParameterId},
                </if>
        </trim>
    </insert>

    <select id="selectDeviceDataNowList" parameterType="java.util.Map"
            resultType="java.util.Map">
        select
            deviceId deviceId,
            value value,
            categoryParameterId categoryParameterId,
        recordTime deviceDataNowId
        from device_data_now
        WHERE
        1=1
        <if test="recordTimeStart !=null">
            <![CDATA[ and  unix_timestamp(recordTime) >= unix_timestamp(#{recordTimeStart})]]>
        </if>
        <if test="recordTimeEnd !=null">
            <![CDATA[ and  unix_timestamp(recordTime) <=unix_timestamp(#{recordTimeEnd}) ]]>
        </if>
            <if test="deviceId != null">
                and deviceId =#{deviceId}
            </if>
            <if test="value != null">
                and value =#{value}
            </if>
            <if test="categoryParameterId != null">
                and categoryParameterId =#{categoryParameterId}
            </if>
        <if test="limit ==null">
        ORDER BY recordTime ASC
        </if>
        <if test="limit !=null">
            ORDER BY recordTime DESC
            limit #{limit}
        </if>
    </select>

    <delete id="delDeviceDataNowById" parameterType="java.lang.String">
        DELETE FROM  device_data_now
        where
        recordTime = #{deviceDataNowId}
    </delete>

</mapper>
